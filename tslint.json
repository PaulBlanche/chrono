{
    "rulesDirectory": [
        "tslint-eslint-rules",
        "tslint-immutable",
        "tslint-consistent-codestyle"
    ],
    "rules": {
        "early-exit": true,
        "naming-convention": [true,
            { "type": "variable", "modifiers": "local", "format": "camelCase" },
            { "type": "type", "format": "PascalCase" },
            { "type": "function", "format": "camelCase"},
            { "type": "genericTypeParameter", "format": "UPPER_CASE" }
        ],
        "no-collapsible-if": true,
        "no-unnecessary-else": true,
        "no-unused": [true, "ignore-parameters"],
        "no-var-before-return": true,
        "prefer-while": true,

        "readonly-keyword": [true, "ignore-local"],
        "readonly-array": [true, "ignore-local"],
        "no-let": true,
        "no-class": true,
        "no-this": true,
        "no-mixed-interface": true,
        "no-expression-statement": true,

        "no-constant-condition": true,
        "no-control-regex": true,
        "no-duplicate-case": true,
        "no-empty-character-class": true,
        "no-ex-assign": true,
        "no-extra-boolean-cast": true,
        "no-extra-semi": true,
        "no-inner-declarations": [true, "both"],
        "no-invalid-regexp": true,
        "no-regex-spaces": true,
        "max-line-length": [true, 80],
        "ter-no-sparse-arrays": true,
        "no-unexpected-multiline": true,
        "no-multi-spaces": [true, { "exceptions": { "PropertyAssignment": false } }],
        "valid-typeof": true,
        "handle-callback-err": true,
        "array-bracket-spacing": [true, "never"],
        "block-spacing": [true, "always"],
        "ter-func-call-spacing": [true, "never"],
        "ter-indent": [true, 4],
        "brace-style": [true, "1tbs", { "allowSingleLine": true }],
        "ter-max-len": [true, 80, { "ignoreComments":true, "ignoreTrailingComments":true, "ignoreStrings":true, "ignoreTemplateLiterals":true }],
        "object-curly-spacing": [true, "always"],
        "space-in-parens": [true, "never"],
        "ter-arrow-spacing": [true, { "before": true, "after": true }],
        "ter-prefer-arrow-callback": true,

        "ban-types": [true, ["Object"], ["String"], ["Boolean"]],
        "no-empty-interface":  true,
        "no-import-side-effect": true,
        "no-inferrable-types": [true, "ignore-params"],
        "no-magic-numbers": true,
        "no-non-null-assertion": true,
        "no-unnecessary-type-assertion": true,
        "prefer-for-of": true,
        "promise-function-async": true,
        "only-arrow-functions": [true, "allow-declarations"],
        "typedef": [true, "call-signature"],
        "typedef-whitespace": [true,
            { "call-signature": "nospace", "index-signature": "nospace", "parameter": "nospace", "property-declaration": "nospace", "variable-declaration": "nospace" },
            { "call-signature": "onespace", "index-signature": "onespace", "parameter": "onespace", "property-declaration": "onespace", "variable-declaration": "onespace"}
        ],
        "await-promise": true,
        "curly": true,
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-empty": true,
        "no-eval": true,
        "no-floating-promises": true,
        "no-inferred-empty-object-type": true,
        "no-misused-new": true,
        "no-null-keyword": true,
        "no-object-literal-type-assertion": true,
        "no-shadowed-variable": true,
        "no-sparse-arrays": true,
        "no-string-literal": true,
        "no-string-throw": true,
        "no-switch-case-fall-through": true,
        "no-this-assignment": true,
        "no-unused-expression": true,
        "no-var-keyword": true,
        "prefer-conditional-expression": true,
        "prefer-object-spread": true,
        "radix": true,
        "restrict-plus-operands": true,
        "strict-type-predicates": true,
        "switch-default": true,
        "triple-equals": true,
        "use-default-type-parameter": true,
        "use-isnan": true,
        "cyclomatic-complexity": [true, 10],
        "eofline": true,
        "linebreak-style": [true, "LF"],
        "max-file-line-count": [true, 200],
        "prefer-const": true,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "arrow-return-shorthand": true,
        "binary-expression-operand-order": true,
        "callable-types": true,
        "encoding": true,
        "import-spacing": true,
        "interface-over-type-literal": true,
        "no-angle-bracket-type-assertion": true,
        "no-boolean-literal-compare": true,
        "no-consecutive-blank-lines": true,
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": [true, "ignore-template-strings"],
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-initializer": true,
        "no-unnecessary-qualifier": true,
        "number-literal-format": true,
        "object-literal-shorthand": true,
        "one-variable-per-declaration": true,
        "prefer-switch": true,
        "prefer-template": [true, "allow-single-concat"],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "return-undefined": true,
        "semicolon": [true, "always"],
        "type-literal-delimiter": true,
        "switch-final-break": [true, "always"],
        "variable-name": [true, "ban-keywords"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
        "whitespace": [true, "check-branch", "check-operator", "check-preblock"]
    },
    "defaultSeverity":"warning"
}
